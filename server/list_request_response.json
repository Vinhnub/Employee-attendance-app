// ============== Request - Response Format ==============

// Login
// Request
{"type" : "login", "params" : {"username" : ?, "password" : ?}}

//Response
//Success 
{"status": "success", "data": {
            "id": ?,
            "fullname": ?,
            "username": ?,
            "role": ?
        }}
//Fail
{"status": "fail", "message": "Invalid credentials"}

//Change password
// Request
{"type" : "change_password", "params" : {"username" : ?, "old_password" : ?, "new_password" : ?}}

//Response
//Success 
{"status": "success", "message" : "Successful"}
//Fail
{"status": "fail", "message": "Wrong password"}

//Create account
// Request
{"type" : "create_account", "params" : {"username" : ?, "password" : ?, "fullname" : ?, "role" : ?}}
//Response
//Success 
{"status": "success", "message" : "Successful"}
//Fail
{"status": "fail", "message": "Username already exists"}

//Reset password
// Request
{"type" : "reset_password", "params" : {"manager_name" : ?, "username" : ?, "new_password" : ?}}
//Response
//Success 
{"status": "success", "message" : "Successful"}
//Fail
{"status": "fail", "message": "Do not have permission"}